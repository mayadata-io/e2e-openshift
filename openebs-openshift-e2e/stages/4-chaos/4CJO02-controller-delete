cd jiva-operator/e2e-tests
cp apps/busybox/deployers/run_e2e_test.yml busybox_ctrl_delete.yml

sed -i -e 's/app: busybox-e2e/app: deploy-busybox-ctrl-delete/g' \
-e 's/generateName: e2e-busybox-deploy/generateName: busybox-deploy-ctrl-delete/g' \
-e 's/app=busybox/app=ctrl-delete/g' \
-e 's/value: statefulset/value: deployment/g' \
-e 's/value: openebs-jiva-csi/value: jiva-csi-sc/g' \
-e 's/value: openebs-busybox/value: busybox-ctrl-delete/g' \
-e 's/value: app-busybox-ns/value: ctrl-delete/g' busybox_ctrl_delete.yml

cat busybox_ctrl_delete.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='app:deploy-busybox-ctrl-delete' job=busybox_ctrl_delete.yml
cd ../..







cd jiva-operator/e2e-tests
cp apps/busybox/liveness/run_e2e_test.yml busybox_loadgen_controller_delete.yml

sed -i -e 's/value: app-busybox-ns/value: ctrl-delete/g' \
-e 's/app=busybox/app=ctrl-delete/g' \
-e 's/liveness: e2e-busybox-liveness/liveness: busybox-liveness-controller-delete/g' busybox_loadgen_controller_delete.yml

cat busybox_loadgen_controller_delete.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='liveness:busybox-liveness-controller-delete' job=busybox_loadgen_controller_delete.yml
cd ../..






cd jiva-operator/e2e-tests
cp experiments/chaos/openebs_controller_failure/run_e2e_test.yml run_ctrl_delete_test.yml

sed -i -e 's/value: percona-mysql-claim/value: busybox-ctrl-delete/g' \
-e "/name: TARGET_AFFINITY_CHECK/{n;s/value: 'enable'/value: 'disable'/g}" \
-e 's/value: '\''name=percona'\''/value: '\''app=ctrl-delete'\''/g' \
-e 's/name: openebs-controller-failure/name: openebs-controller-delete /g' \
-e 's/value: app-percona-ns/value: ctrl-delete/g' run_ctrl_delete_test.yml

sed -i '/name: DATA_PERSISTENCE/{n;s/.*/            value: busybox/}' run_ctrl_delete_test.yml

sed -i '/name: CHAOS_TYPE/{n;s/.*/            value: jiva-ctrl-delete/}' run_ctrl_delete_test.yml

sed -i '/name: CONTAINER_RUNTIME/{n;s/.*/            value: docker/}' run_ctrl_delete_test.yml

sed -i '/parameters.yml: |/a \
    blocksize: 4k\
    blockcount: 1024\
    testfile: ctrldeletetest
' run_ctrl_delete_test.yml

cat run_ctrl_delete_test.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='name:openebs-controller-delete' job=run_ctrl_delete_test.yml
cd ../..






cd jiva-operator/e2e-tests
cp apps/busybox/liveness/run_e2e_test.yml busybox_loadgen_deprovision_controller_delete.yml

sed -i -e 's/value: app-busybox-ns/value: ctrl-delete/g' \
-e 's/app=busybox/app=ctrl-delete/g' \
-e 's/value: provision/value: deprovision/g' \
-e 's/generateName: e2e-busybox-liveness/generateName: busybox-liveness-dep-controller-delete/g' \
-e 's/liveness: e2e-busybox-liveness/liveness: busybox-liveness-deprovision-controller-delete/g' busybox_loadgen_deprovision_controller_delete.yml

cat busybox_loadgen_deprovision_controller_delete.yml

