#!/bin/bash

pod() {
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$ip -p $port 'cd e2e-openshift && bash openebs-openshift-e2e/stages/4-chaos/4CJO08-nfs-ctrl-container-kill node '"'$CI_JOB_ID'"'' '"'$CI_PIPELINE_ID'"' '"'$CI_COMMIT_SHA'"' '"'$RELEASE_TAG'"'
}

node() {
job_id=$(echo $1) #Gitlab job id obtain from the gitlab env ($CI_JOB_ID).
pipeline_id=$(echo $2) # Gitlab pipeline id obtained from gitlab env ($CI_PIPELINE_ID).
commit_id=$(echo $3) #Gitlab commit id Obtained fron gilab env ($CI_COMMIT_SHA).
releaseTag=$(echo $4)
source ~/.profile
#github token to push the test result into github mayadata-io/e2e-openshift repository.
#This token is set as an env in ~/.profile in the test cluster.
gittoken=$(echo "$github_token")
case_id=4CJO08  #test case ID.

time="date"
current_time=$(eval $time)

present_dir=$(pwd)
echo $present_dir
#Creating e2e custom resource result for the test.
bash openebs-openshift-e2e/utils/pooling jobname:nfs-ctrl-kill-jiva
bash openebs-openshift-e2e/utils/e2e-cr jobname:nfs-ctrl-container-kill jobphase:Running init_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag"

################
# e2eBook 1 #
################
# Performing Application Container Chaos

run_id="ctrl-container-kill";test_name=$(bash openebs-openshift-e2e/utils/generate_test_name testcase=openebs-jiva-nfs-controller-failure metadata=${run_id})
echo $test_name

cd jiva-operator/e2e-tests
# copy the content of chaos run_e2e_test.yml into a different file to update the test specific parameters.
cp experiments/chaos/nfs_chaos/nfs_openebs_controller_failure/run_e2e_test.yml nfs_ctrl_container_kill.yml

sed -i -e '/name: NFS_NAMESPACE/{n;s/.*/            value: app-nfs-ns/}' \
-e '/name: NFS_LABEL/{n;s/.*/            value: app=nfs/}' \
-e '/name: NFS_PVC/{n;s/.*/            value: nfs-pvc-claim/}' \
-e '/name: APP_LABEL/{n;s/.*/            value: name=minio-0/}' \
-e '/name: APP_NAMESPACE/{n;s/.*/            value: app-minio-ns/}' nfs_ctrl_container_kill.yml

sed -i -e 's/value: docker/value: containerd/g' nfs_ctrl_container_kill.yml

echo "Running the e2e test for minio Deployment Container Volume mgmt kill.."

sed -i '/command:/i \
          - name: RUN_ID\
            value: '"$run_id"'\
' nfs_ctrl_container_kill.yml

cat nfs_ctrl_container_kill.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='name:nfs-jiva-controller-failure' job=nfs_ctrl_container_kill.yml
cd ../..
# Get the cluster state Once the e2e jobs completed.
bash openebs-openshift-e2e/utils/dump_cluster_state;
bash openebs-openshift-e2e/utils/event_updater jobname:nfs-ctrl-container-kill $test_name jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id"

if [ "$?" != "0" ]; then
#python3 openebs-openshift-e2e/utils/result/result_update.py $job_id 4CJO08 4-chaos "Induce ctrl container kill and check if it is recovered successfully" Fail $pipeline_id "$current_time" $commit_id $gittoken
exit 1;
fi

################
# e2eBook 2 #
################
# Deprovisioning the application
run_id="deprovision-jiva";test_name=$(bash openebs-openshift-e2e/utils/generate_test_name testcase=minio-deployment metadata=${run_id})
echo $test_name

cd jiva-operator/e2e-tests

echo "Running the e2e test.."
cp apps/minio/deployers/run_e2e_test.yml deprovision_app_jiva.yml

# Replace the storage class name
sed -i '/name: PROVIDER_STORAGE_CLASS/{n;s/.*/            value: openebs-nfs-NS/}' deprovision_app_jiva.yml

sed -i -e 's/value: app-minio-ns/value: app-minio-ns/g' \
-e 's/app: minio-e2e/app: minio-e2e-deprovision-jiva/g' \
-e 's/value: '\''provision'\''/value: '\''deprovision'\''/g' deprovision_app_jiva.yml

sed -i '/command:/i \
          - name: RUN_ID\
            value: '"$run_id"'\
' deprovision_app_jiva.yml

cat deprovision_app_jiva.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='app:minio-e2e-deprovision-jiva' job=deprovision_app_jiva.yml

echo "Dumping state of cluster post job run"; echo ""
cd ../..
bash openebs-openshift-e2e/utils/dump_cluster_state;

bash openebs-openshift-e2e/utils/event_updater jobname:nfs-ctrl-container-kill $test_name jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id"

rc_val=$(echo $?)
current_time=$(eval $time)

# Update result of the test case in github mayadata-io/e2e-openshift repository.
if [ "$rc_val" != "0" ]; then
bash openebs-openshift-e2e/utils/e2e-cr jobname:nfs-ctrl-container-kill jobphase:Completed end_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag" test_result:Fail
#python3 openebs-openshift-e2e/utils/result/result_update.py $job_id 4CJO08 4-chaos "Induce ctrl container kill and check if it is recovered successfully" Fail $pipeline_id "$current_time" $commit_id $gittoken
exit 1;
fi

bash openebs-openshift-e2e/utils/e2e-cr jobname:nfs-ctrl-container-kill jobphase:Completed end_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag" test_result:Pass
#python3 openebs-openshift-e2e/utils/result/result_update.py $job_id 4CJO08 4-chaos "Induce ctrl container kill and check if it is recovered successfully" Pass $pipeline_id "$current_time" $commit_id $gittoken

if [ "$rc_val" != "0" ]; then
exit 1;
fi
}

if [ "$1" == "node" ];then
  node $2 $3 $4 $5
else
  pod
fi
