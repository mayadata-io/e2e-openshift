cd jiva-operator/e2e-tests
cp apps/busybox/deployers/run_e2e_test.yml deploy_csi_xfs_busybox.yml

sed -i -e 's/value: app-busybox-ns/value: busybox-csi-xfs/g' \
-e 's/app: busybox-e2e/app: busybox-e2e-csi-xfs/g' \
-e 's/value: openebs-jiva-csi/value: jiva-csi-xfs-sc/g' \
-e 's/generateName: e2e-busybox-deploy-/generateName: e2e-busybox-csi-xfs-/g' deploy_csi_xfs_busybox.yml

cat deploy_csi_xfs_busybox.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='app:busybox-e2e-csi-xfs' job=deploy_csi_xfs_busybox.yml
cd ../..





cd jiva-operator/e2e-tests
echo "Running the e2e test for busybox liveness..."
cp apps/busybox/liveness/run_e2e_test.yml liveness_csi_xfs_busybox.yml

sed -i -e 's/liveness: e2e-busybox-liveness/liveness: e2e-busybox-csi-xfs-liveness/g' \
-e 's/generateName: e2e-busybox-liveness-/generateName: e2e-busybox-csi-xfs-liveness-/g' \
-e 's/value: app-busybox-ns/value: busybox-csi-xfs/g' liveness_csi_xfs_busybox.yml

cat liveness_csi_xfs_busybox.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='liveness:e2e-busybox-csi-xfs-liveness' job=liveness_csi_xfs_busybox.yml
cd ../..






cd jiva-operator/e2e-tests
cp experiments/functional/csi-volume-resize/run_e2e_test.yml run_jiva_volume_resize_xfs_test.yml

sed -i -e '/name: APP_PVC/{n;s/.*/            value: openebs-busybox/g}' \
-e '/name: APP_LABEL/{n;s/.*/            value: app=busybox/g}' \
-e '/name: STORAGE_CLASS/{n;s/.*/            value: jiva-csi-xfs-sc/g}' \
-e 's/app: csi-vol-resize/app: csi-vol-resize-xfs/g' \
-e '/name: PV_CAPACITY/{n;s/.*/            value: 5Gi/g}' \
-e '/name: NEW_CAPACITY/{n;s/.*/            value: 10Gi/g}' \
-e '/name: APP_NAMESPACE/{n;s/.*/            value: busybox-csi-xfs/g}' run_jiva_volume_resize_xfs_test.yml

cat run_jiva_volume_resize_xfs_test.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='app:csi-vol-resize-xfs' job=run_jiva_volume_resize_xfs_test.yml
cd ../..





cd jiva-operator/e2e-tests
cp apps/busybox/liveness/run_e2e_test.yml dep_liveness_csi_xfs_busybox.yml

sed -i -e 's/liveness: e2e-busybox-liveness/liveness: e2e-busybox-csi-xfs-liveness-dep/g' \
-e 's/generateName: e2e-busybox-liveness-/generateName: e2e-busybox-csi-xfs-liveness-dep-/g' \
-e 's/value: provision/value: deprovision/g' \
-e 's/value: app-busybox-ns/value: busybox-csi-xfs/g' dep_liveness_csi_xfs_busybox.yml

cat dep_liveness_csi_xfs_busybox.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='liveness:e2e-busybox-csi-xfs-liveness-dep' job=dep_liveness_csi_xfs_busybox.yml
cd ../..





cd jiva-operator/e2e-tests
cp apps/busybox/deployers/run_e2e_test.yml dep_csi_xfs_busybox.yml

sed -i -e 's/value: app-busybox-ns/value: busybox-csi-xfs/g' \
-e 's/app: busybox-e2e/app: busybox-e2e-csi-xfs-dep/g' \
-e 's/generateName: e2e-busybox-deploy-/generateName: e2e-busybox-csi-xfs-dep-/g' \
-e 's/value: statefulset/value: deployment/g' \
-e 's/value: provision/value: deprovision/g' \
-e 's/value: openebs-jiva-csi/value: jiva-csi-xfs-sc/g' dep_csi_xfs_busybox.yml

cat dep_csi_xfs_busybox.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='app:busybox-e2e-csi-xfs-dep' job=dep_csi_xfs_busybox.yml
cd ../..
