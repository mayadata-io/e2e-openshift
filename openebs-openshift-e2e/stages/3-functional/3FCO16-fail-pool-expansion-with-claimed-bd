#!/bin/bash

pod(){
ssh -o StrictHostKeyChecking=no $user@$ip -p $port -i /root/.ssh/id_rsa 'cd e2e-openshift && bash openebs-openshift-e2e/stages/3-functional/3FCO15-fail-pool-expansion-with-claimed-bd node '"'$CI_JOB_ID'"'' '"'$CI_PIPELINE_ID'"' '"'$CI_COMMIT_SHA'"' '"'$RELEASE_TAG'"'
}

node() {
source ~/.profile
#gittoken=$(echo "$github_token")
job_id=$(echo $1)
pipeline_id=$(echo $2)
commit_id=$(echo $3)
releaseTag=$(echo $4)
case_id=3FCO15

time="date"
current_time=$(eval $time)

present_dir=$(pwd)
echo $present_dir

bash openebs-openshift-e2e/utils/e2e-cr jobname:fail-pool-expansion-claimed-bd jobphase:Waiting
bash openebs-openshift-e2e/utils/e2e-cr jobname:fail-pool-expansion-claimed-bd jobphase:Running init_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag"

################
# e2eBook 1 #
################

test_name=$(bash openebs-openshift-e2e/utils/generate_test_name testcase=fail-pool-expansion-claimed-bd metadata='')
echo $test_name

cd cstor-operators/e2e-tests

cp experiments/functional/cspc-pool/fail-pool-expansion-with-claimed-bd/run_e2e_test.yml fail-pool-expansion-claimed-bd.yml

sed -i -e '/name: CSPC_NAME/{n;s/.*/            value: "cstor-cspc-mirror-pool"/}' \
sed -i -e '/name: OPERATOR_NS/{n;s/.*/            value: "openebs"/}' \
-e '/name: POOL_TYPE/{n;s/.*/            value: "mirror"/}' fail-pool-expansion-claimed-bd.yml

cat fail-pool-expansion-claimed-bd.yml

bash ../../openebs-openshift-e2e/utils/e2e_job_runner label='app:pool-expansion-with-claimed-bd' job=fail-pool-expansion-claimed-bd.yml
cd ../..
bash openebs-openshift-e2e/utils/dump_cluster_state;
bash openebs-openshift-e2e/utils/event_updater jobname:fail-pool-expansion-claimed-bd $test_name jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id"

rc_val=$(echo $?)
current_time=$(eval $time)

if [ "$rc_val" != "0" ]; then
bash openebs-openshift-e2e/utils/e2e-cr jobname:fail-pool-expansion-claimed-bd jobphase:Completed end_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" openebs_version:"$releaseTag" test_result:Fail
#python3 openebs-openshift-e2e/utils/result/result_update.py $job_id 3FCO15 3-functional "Verify if the pool creation is failed when the blockdevice is already claimed" Fail "$current_time" $#gittoken
exit 1;
fi

bash openebs-openshift-e2e/utils/e2e-cr jobname:fail-pool-expansion-claimed-bd jobphase:Completed end_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag" test_result:Pass
}

if [ "$1" == "node" ];then
  node $2 $3 $4 $5
else
  pod
fi
